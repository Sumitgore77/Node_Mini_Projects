<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .custom-table thead th {
            background-color: #343a40;
            color: white;
        }

        .custom-table tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        .custom-alert {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <%- include('navbar.ejs') %>

    <div class="container mt-5">
        
        <!-- Courses Table -->
        <div class="card shadow">
            <div class="card-header text-center bg-dark text-white">
                <h3>View Course</h3>
            </div>
        <!-- Search -->
        <div class="mt-3 mx-3">
            <input type="text" class="form-control" placeholder="ðŸ” Search Courses..." id="searchInput">
        </div><br>
            <table class="table table-bordered table-hover custom-table align-middle text-center">
                <thead>
                    <tr>
                        <th>Sr. No</th>
                        <th>Course Name</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody id="viewTableBodyId">
                    <% if(Array.isArray(data) && data.length > 0){ %>
                        <% data.forEach((val, i) => { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= val.cname %></td>
                                <td>
                                    <a href="/updateCourse?cid=<%= val.cid %>" onClick="return confirm('Do you wnat to Update this record ?') " class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-fill"></i> Update
                                    </a>
                                </td>
                                <td>
                                    <a href="/deleteCourse?cid=<%= val.cid %>" onClick="return confirm('Do you wnat to delete this record ?')" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center text-muted">No courses available.</td>
                        </tr>
                    <% } %>

                    <% if (status === "updated") { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-success custom-alert" role="alert">
                                    Course updated successfully!
                                </div>
                            </td>
                        </tr>
                    <% } %>

                    <% if (status === "deleted") { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-success custom-alert" role="alert">
                                    Course deleted successfully!
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        </div>
    </div>

    <script src="/searchCourse.js"></script>
