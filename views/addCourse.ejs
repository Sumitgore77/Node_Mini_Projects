<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
   
    <style>
        .was-validated .form-control:invalid ~ .invalid-feedback {
            display: block;
        }
    </style>
</head>

<body>
    <%- include('navbar')%>
    <div class="container mt-5">
        <div class="card shadow p-4 rounded">
            <h4 class="mb-4">Add Course</h4>
            <form action="/save" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="subjectName" class="form-label">Course Name</label>
                    <input type="text" class="form-control" id="subjectName" name="subject"
                        placeholder="Enter Course Name" required pattern="^[A-Za-z\s]{2,40}$">
                    <div class="invalid-feedback">
                        Please enter a valid Course name (letters and spaces only).
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

            <% if(message){ %>
                <div class="alert alert-success mt-3 py-2 text-center" id="msg1">
                    <%= message %>
                </div>
            <% } %>
        </div>
    </div>

        <script src="/validationCourse.js"></script>
        <script src="/viewCourse.js"></script>
        
</body>

</html>
